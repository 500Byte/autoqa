{
    "appId": "com.orbidi.autoqa",
    "productName": "AutoQA",
    "asar": true,
    "directories": {
        "output": "dist",
        "buildResources": "build"
    },
    "files": [
        ".next/**/*",
        "src/**/*",
        "public/**/*",
        "electron.cjs",
        "preload.cjs",
        "server.js",
        "package.json",
        "next.config.mjs",
        "node_modules/**/*"
    ],
    "extraMetadata": {
        "main": "electron.cjs"
    },
    "publish": [
        {
            "provider": "github",
            "owner": "500Byte",
            "repo": "autoqa",
            "releaseType": "draft"
        }
    ],
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "build/icon.ico",
        "artifactName": "${productName}-Setup-${version}.${ext}",
        "publish": [
            "github"
        ]
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "AutoQA"
    },
    "linux": {
        "target": [
            {
                "target": "AppImage",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "build/icon.png",
        "category": "Development",
        "artifactName": "${productName}-${version}.${ext}",
        "publish": [
            "github"
        ]
    }
}